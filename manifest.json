{
  "manifest_version": 2,
  "name": "PaoMa Extension for Chrome",
  "version": "1.0.0",
  "description": "Rody Create PaoMa Support.",
  "icons": {
    "128": "img/icon128.png",
    "48": "img/icon48.png",
    "16": "img/icon16.png"
  },
  "minimum_chrome_version": "25",

  "browser_action": {
    "default_icon": "img/icon19.png",
    "default_title": "PaoMa Helper",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "js/jquery-1.7.1.min.js"
    ]
  },
  "incognito": "split",
  "offline_enabled": false,
  "content_scripts": [ 
  						{ "matches": ["http://ksifvch.ctb988.com/*","https://ksifvch.ctb988.com/*",
  							"http://www.ctb988.com/*","https://www.ctb988.com/*",
  							"http://racing.ctb988.com/*","https://racing.ctb988.com/*"
  							],
  						  "js": ["js/jquery-1.7.1.min.js","js/content_script.js"],
  						  "css": ["css/right_top.css"]
  						}
  						  
  					 ],
  "permissions": [
    "tabs",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "*://*.ctb988.com/*",
    "*://*.ctb988.net/*"
  ],
  "content_security_policy": "script-src 'self' https://use.ctb988.com; object-src 'self'",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      }
    }
  }
}